            <field name="value" eval="'ir.actions.act_window,' + str(ref('act_employee_statement_wizard'))" />
            <field name="key">action</field>
            <field name="model">hr.employee</field>
        </record>
        -->
        <menuitem name="Employee Statement" parent="account.menu_finance_legal_statement" sequence="30" action="act_employee_statement_wizard" id="menu_employee_statement_report"/> 
        
</data>
</odoo>
