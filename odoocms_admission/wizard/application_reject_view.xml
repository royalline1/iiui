<?xml version="1.0"?>
<odoo>

    <record id="odoocms_reject_view_form" model="ir.ui.view">
        <field name="name">odoocms.application.reject.form</field>
        <field name="model">odoocms.application.reject</field>
        <field name="arch" type="xml">
            <form string="Reject Reason">
                <group class="oe_title">
                    <field name="reject_reason_id"/>
                </group>
                <footer>
                    <button name="action_reject_reason_apply" string="Submit" type="object" class="btn btn-sm btn-primary"/>
                    <button string="Cancel" class="btn btn-sm btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="odoocms_reject_application" model="ir.actions.act_window">
        <field name="name">Reject Reason</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">odoocms.application.reject</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="odoocms_reject_view_form"/>
        <field name="target">new</field>
    </record>

</odoo>