<?xml version="1.0"?>
<odoo>

    <record id="odoocms_merit_status_form" model="ir.ui.view">
        <field name="name">odoocms.merit.status.form</field>
        <field name="model">odoocms.merit.status</field>
        <field name="arch" type="xml">
            <form string="Merit Status">
                <group>
                    <group>
                        <field name="merit_id" readonly="1"/>
                        <field name="merit_register_id" readonly="1"/>
                        <field name="preference" readonly="1"/>
                        <field name="entryID" readonly="1"/>
                    </group>
                    <group>
                        <field name="state"/>
                        <field name="locked" attrs="{'invisible': [('state','!=', 'done')]}"/>
                    </group>
                    <group>
                        <field name="comment" readonly="1" attrs="{'invisible': [('comment', '=', False)]}"/>
                    </group>
                </group>
                <groups>
                    <field name="comments"/>
                </groups>
                <footer>
                    <button name="change_status" string="Change Status" type="object"
                            attrs="{'invisible': [('comment', '!=', '')]}" class="btn btn-sm btn-primary"/>
                    <button string="Cancel" class="btn btn-sm btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_odoocms_merit_status" model="ir.actions.act_window">
        <field name="name">Merit Status</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">odoocms.merit.status</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="odoocms_merit_status_form"/>
        <field name="target">new</field>
    </record>

</odoo>